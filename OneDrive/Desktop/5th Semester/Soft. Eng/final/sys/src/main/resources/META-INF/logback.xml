<configuration>
    <!-- Καταγραφή μηνυμάτων στη γραμμή εντολών (console) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Ρύθμιση επιπέδου logging της ρίζας σε OFF για να απενεργοποιήσεις όλα τα μηνύματα -->
    <root level="OFF">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
