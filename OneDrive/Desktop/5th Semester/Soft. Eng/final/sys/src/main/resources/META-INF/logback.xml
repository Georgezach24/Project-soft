<configuration>
    <!-- Ρύθμιση επιπέδου logging για το Hibernate -->
    <logger name="org.hibernate" level="WARN" />
    <logger name="org.hibernate.SQL" level="WARN" />
    <logger name="org.hibernate.type" level="WARN" />
    <logger name="org.hibernate.orm.connections.pooling" level="WARN"/>

    <!-- Ρύθμιση επιπέδου logging για την εφαρμογή -->
    <logger name="gr.conference" level="DEBUG" />

    <!-- Καταγραφή μηνυμάτων στη γραμμή εντολών (console) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Ρυθμίσεις για το επίπεδο καταγραφής της ρίζας -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
